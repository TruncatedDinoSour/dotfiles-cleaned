bar {
		status_command i3blocks -c $i3blocks_config_file
		# uncomment the line below for access to i3status instead of i3blocks
        # status_command i3status -c $i3status_config_file
		position top
		font pango:sans 11
        font pango:FontAwesome 11
		# font pango:Source Code Pro Medium 11.6

		# enable transperacy
		i3bar_command i3bar --transparency
		tray_output none
		separator_symbol "|"
		
		colors {
           background $bar_bg
           statusline $bar_stat
           separator  $bar_sep

           #					border		bg				txt
           focused_workspace    $bar_bg     $bar_ws_focus   $txt
           inactive_workspace   $bar_bg     $bar_bg         $itxt
           urgent_workspace     $bar_bg     $bar_ws_ubg     $txt
		}
}

