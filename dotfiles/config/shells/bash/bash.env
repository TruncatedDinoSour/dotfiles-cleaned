#!/bin/bash

# Bash
export EDITOR='/usr/bin/vim'
export VISUAL="$EDITOR"
export BROWSER='/usr/bin/firefox'
export TERMINAL='/usr/local/bin/st'

# Tar
export XZ_OPT=-e9T0

# Python
export PYTHONSTARTUP="$HOME/.config/python/startup.py"

# sudo
SUDO_PROMPT="(enter password for \033[1m%u${RESTORE}) "
SUDO_PROMPT="$(echo -en "$SUDO_PROMPT")"
export SUDO_PROMPT

# FZF
export FZF_DEFAULT_OPTS="--layout=reverse --height=20 --no-mouse -i"
export FZF_TMUX_HEIGHT=20
export FZF_DEFAULT_COMMAND='find .'

# NNN
export NNN_TRASH=1
export NNN_LOCKER='cmatrix'

# Less
export LESS="-rIM --use-color --incsearch"

# Man
export MANPATH="$MANPATH:$HOME/.local/share/man"

# Xorg
export XAUTHORITY="$HOME/.local/share/xorg/Xauthorty"

# GTK
export GTK2_RC_FILES="$HOME/.config/gtk-2.0/gtkrc-2.0"

# GDB
export GEF_RC="$HOME/.config/gefrc"

# Baz
# export BAZ_DEBUG_LOAD=true
export BAZ_LOADER_ENABLED=true
export BAZ_LS_PROG='lsd'
