#!/bin/bash

function main() {
    local reset="\e[0m"
    local red="\e[0;91m"
    local green="\e[0;92m"
    local blue="\e[0;94m"

    printf "${red}❯❯ Explicit${reset}: %s\n" "$(pacman -Qe | wc -l)"
    printf "${green}❯❯ Total${reset}: %s\n" "$(pacman -Q | wc -l)"
    printf "${blue}❯❯ External${reset}: %s\n" "$(pacman -Qm | wc -l)"
}

main

